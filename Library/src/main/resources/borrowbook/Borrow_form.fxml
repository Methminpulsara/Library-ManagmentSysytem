<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.LinearGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="650.0" stylesheets="@../css/Borrow.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.icet.ecom.controller.borrow.Borrow_form">

   <children>
      <Rectangle arcHeight="10.0" arcWidth="10.0" fill="#7a81a8" height="311.0" layoutX="22.0" layoutY="134.0" strokeType="INSIDE" width="252.0">
         <stroke>
            <LinearGradient endX="1.0" endY="1.0" startX="0.2776024890622882" startY="0.760252371947472">
               <stops>
                  <Stop>
                     <color>
                        <Color />
                     </color>
                  </Stop>
                  <Stop offset="1.0">
                     <color>
                        <Color red="0.1979098916053772" green="0.25268030166625977" blue="0.7456140518188477" />
                     </color>
                  </Stop>
               </stops>
            </LinearGradient>
         </stroke></Rectangle>

      <!-- User & Book Selection -->
      <JFXComboBox fx:id="user_cmb" layoutX="73.0" layoutY="157.0" onAction="#user_cmb_OnAction" prefHeight="20.0" prefWidth="184.0" promptText="Select User ID" />
      <JFXComboBox fx:id="book_cmb" layoutX="74.0" layoutY="202.0" onAction="#book_cmb_OnAction" prefHeight="35.0" prefWidth="184.0" promptText="Select Book ID" />

      <!-- Date Picker -->
      <DatePicker fx:id="datepiker" layoutX="74.0" layoutY="253.0" prefHeight="35.0" prefWidth="184.0" />

      <!-- Add Button -->
      <Button layoutX="77.0" layoutY="312.0" mnemonicParsing="false" onAction="#btnaddOnAction" prefHeight="35.0" prefWidth="90.0" style="-fx-background-color: #ff7675; -fx-text-fill: white; -fx-font-size: 14px;" text="ADD" />

      <!-- Order ID Label -->
      <Label layoutX="22.0" layoutY="84.0" prefHeight="20.0" prefWidth="81.0" text="Order - &gt;" textFill="WHITE">
         <font>
            <Font name="Bauhaus 93" size="15.0" />
         </font>
      </Label>
      <Label fx:id="Torderid" layoutX="124.0" layoutY="85.0" prefHeight="18.0" prefWidth="47.0" textFill="WHITE">
         <font>
            <Font name="Bauhaus 93" size="14.0" />
         </font>
      </Label>

      <!-- Borrow Details Table -->
      <TableView fx:id="tblBorrwDetails" layoutX="294.0" layoutY="133.0" prefHeight="311.0" prefWidth="449.0">
         <columns>
            <TableColumn fx:id="colBookID" prefWidth="125.0" text="Book ID" />
            <TableColumn fx:id="colBorrowdate" prefWidth="151.0" text="Borrow Date" />
            <TableColumn fx:id="colreturndate" prefWidth="166.0" text="Return Date" />
         </columns>
      </TableView>

      <!-- Place Order Button -->
      <JFXButton fx:id="btnplace" layoutX="309.0" layoutY="459.0" onAction="#btnPlaceOnAction" prefHeight="31.0" prefWidth="423.0" style="-fx-background-color: #686de0; -fx-text-fill: WHITE; -fx-font-size: 14px;" text="Place Order">
      </JFXButton>

      <!-- Dynamic Date Label -->
      <Label fx:id="lbldate" layoutX="605.0" layoutY="22.0" prefHeight="41.0" prefWidth="184.0">
         <font>
            <Font name="Berlin Sans FB Bold" size="22.0" />
         </font>
      </Label>

   </children>
</AnchorPane>
